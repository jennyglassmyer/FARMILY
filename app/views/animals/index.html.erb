<div class="header-container">
  <div class="banner">
    <%= image_tag 'jumbotron.jpg', class: 'img-banner' %>
  </div>
  <div class="header-text">
    <h1 class="header-h1">Did you ever take a sheep on a stroll through GÃ¶rlitzer Park?</h1>
    <h4 class="header-h4">Rent a farm animal and create a unique, cuddly experience</h4>
  </div>

  <div>
    <%= form_tag animals_path, method: :get do %>
    <div class="search-bar">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for type of animal"
      %>
      <%= submit_tag "Go", class: "search-button" %>
    </div>
    <% end %>
    <div class="row justify-content-center">
      <div class="col-sm-8">
        <div id="animals">
          <% @animals.each do |animal| %>
            <% if animal.class == Animal %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<h5 class="home-h3">These farm animals are cute and available</h5>
<% if @show_filter %>
<%= form_tag animals_path, method: :get do %>
      <%= select_tag(:search, options_for_select(Animal::CARE_LEVEL))  %>
      <%= hidden_field_tag :query, params[:query] %>
      <%= submit_tag "Select", class: "btn btn-link" %>
    <% end %>
<% end %>

<div class="container">
      <ul class = cards>
      <% @animals.each do |animal| %>
      <li class="card" style="background-image: url(<%= cl_image_path animal.photos.first.key %>)"><%= link_to animal.name, animal_path(animal) %></li>
      <% end %>
      </ul>
</div>
