<h1>Create New Animal Profile</h1>

<%= simple_form_for [@animal] do |f| %>
  <%= f.input :name %>
  <%= f.input :species %>
  <%= f.input :breed %>
  <%= f.input :gender %>
  <%= f.input :personality %>
  <%= f.input :description %>
  <%= f.input :care_level %>
  <%= f.input :age %>
  <%= f.input :price_per_day %>
  <%= f.input :care_instructions %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
