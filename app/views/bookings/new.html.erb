<div class="container">
  <h1 class="new-header-booking"> <%= link_to"〈", animal_path(@animal), class: "arrow" %> Create New Booking for <%= @animal.name %></h1>
</div>

<div class="container" id="booking-container">
  <div class="booking-details">
    <h2>Your Booking Details</h2>
      <div class="detail-list">
        <ul>
          <li>Farm Animal: <%= @animal.name %></li>
          <li>Location: <%= @animal.user.address %></li>
          <li>What to Expect: <%= @animal.description %></li>
          <li>Price Per Day: <%= @animal.price_per_day %>€</li>
        </ul>
      </div>
  </div>
  <div class="booking-img">
    <% @animal.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 350, width: 500, crop: :fill, radius: 15; %>
    <% end %>
  </div>
</div>

<div class="date-booking">
  <%= simple_form_for [@animal, @booking] do |f| %>
  <%= f.input :date_start, label: "Date of Pickup" %>
  <%= f.input :date_end, label: "Date of Drop Off" %>
  <%= f.submit :class => "button" %>
  <% end %>
</div>
