<div class="container box-login">
  <h2 class="login-header">Log in</h2>
</div>
<div id="login-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-categories">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions login-btn">
      <%= f.button :submit, "Log in", class: "button login-button" %>
    </div>

    <div class="registration-buttons">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password' %><br />
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'signup' %><br />
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
